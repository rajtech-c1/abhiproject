<!-- res/drawable/progress_circle.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="ring"
    android:useLevel="false">
    <size
        android:width="48dp"
        android:height="48dp" />
    <gradient
        android:type="sweep"
        android:useLevel="false"
        android:startColor="#FF6F00"
        android:centerColor="#FFA000"
        android:endColor="#FF6F00"
        android:angle="0" />
    <stroke
        android:width="5dp"
        android:color="#FF6F00" />
</shape>
